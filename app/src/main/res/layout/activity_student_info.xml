<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentInfoActivity"
    android:background="@color/layoutBack">

    <ImageView
        android:id="@+id/imageUserEdit"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:contentDescription="noPhoto"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_insert_photo_24"
        android:background="@drawable/image_back" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHint="@color/visible_hint"
        android:backgroundTint="@color/textFieldBack"
        app:boxStrokeColor="@color/boxStrokeColor"
        app:hintTextColor="@color/hintTextColor"
        android:hint="Логин"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:background="@drawable/separator"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textLastName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHint="@color/visible_hint"
        android:backgroundTint="@color/textFieldBack"
        app:boxStrokeColor="@color/boxStrokeColor"
        app:hintTextColor="@color/hintTextColor"
        android:hint="Фамилия"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editLastName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:background="@drawable/separator"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFirstName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHint="@color/visible_hint"
        android:backgroundTint="@color/textFieldBack"
        app:boxStrokeColor="@color/boxStrokeColor"
        app:hintTextColor="@color/hintTextColor"
        android:hint="Имя"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textMiddleName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editFirstName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:background="@drawable/separator"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textMiddleName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHint="@color/visible_hint"
        android:backgroundTint="@color/textFieldBack"
        app:boxStrokeColor="@color/boxStrokeColor"
        app:hintTextColor="@color/hintTextColor"
        android:hint="Отчество"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editMiddleName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:background="@drawable/separator"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveUser"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="@color/buttonColor"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:text="Сохранить изменения"
        android:textAlignment="center"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHistory"
        android:layout_width="172dp"
        android:layout_height="62dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/buttonColor"
        android:text="История отчетов"
        android:textAlignment="center"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExit"
        android:layout_width="172dp"
        android:layout_height="62dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/buttonColor"
        android:text="Выйти с аккаунта"
        android:textAlignment="center"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>